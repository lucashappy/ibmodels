<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content">
	<name>Content - Image gallery - sigplus</name>
	<author>Levente Hunyadi</author>
	<creationDate>Sep 03, 2010</creationDate>
	<copyright>Â© 2009-2010 Levente Hunyadi. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>hunyadi@gmail.com</authorEmail>
	<authorUrl>http://hunyadi.info.hu/projects/sigplus</authorUrl>
	<version>1.3.0.20</version>
	<description>SIGPLUS_DESCRIPTION</description>
	<files>
		<filename plugin="sigplus">sigplus.php</filename>
		<folder>sigplus</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_content_sigplus.ini</language>
		<!--<language tag="de-DE">de-DE.plg_content_sigplus.ini</language>-->
		<!--<language tag="es-ES">es-ES.plg_content_sigplus.ini</language>-->
		<language tag="fr-FR">fr-FR.plg_content_sigplus.ini</language>
		<language tag="hu-HU">hu-HU.plg_content_sigplus.ini</language>
		<!--<language tag="ru-RU">ru-RU.plg_content_sigplus.ini</language>-->
		<language tag="sk-SK">sk-SK.plg_content_sigplus.ini</language>
	</languages>
	<params addpath="/plugins/content/sigplus/elements">
		<param name="base_folder" type="text" default="images/stories" label="SIGPLUS_BASE_FOLDER" description="SIGPLUS_BASE_FOLDER_DESCRIPTION" />
		<param name="layout" type="radio" default="fixed" label="SIGPLUS_LAYOUT" description="SIGPLUS_LAYOUT_DESCRIPTION">
			<option value="fixed">SIGPLUS_LAYOUT_FIXED</option>
			<option value="flow">SIGPLUS_LAYOUT_FLOW</option>
		</param>
		<param name="rows" type="text" default="1" label="SIGPLUS_ROWS" description="SIGPLUS_ROWS_DESCRIPTION" />
		<param name="cols" type="text" default="3" label="SIGPLUS_COLUMNS" description="SIGPLUS_COLUMNS_DESCRIPTION" />
		<param name="thumb_count" type="text" default="0" label="SIGPLUS_THUMB_MAXCOUNT" description="SIGPLUS_THUMB_MAXCOUNT_DESCRIPTION" />
		<param name="thumb_width" type="text" default="200" label="SIGPLUS_THUMB_WIDTH" description="SIGPLUS_THUMB_WIDTH_DESCRIPTION" />
		<param name="thumb_height" type="text" default="200" label="SIGPLUS_THUMB_HEIGHT" description="SIGPLUS_THUMB_HEIGHT_DESCRIPTION" />
		<param name="thumb_crop" type="radio" default="1" label="SIGPLUS_THUMB_CROP" description="SIGPLUS_THUMB_CROP_DESCRIPTION">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="alignment" type="list" default="center" label="SIGPLUS_ALIGNMENT" description="SIGPLUS_ALIGNMENT_DESCRIPTION">
			<option value="left-clear">SIGPLUS_ALIGNMENT_LEFT</option>
			<option value="left-float">SIGPLUS_ALIGNMENT_LEFT_FLOAT</option>
			<option value="center">SIGPLUS_ALIGNMENT_CENTER</option>
			<option value="right-clear">SIGPLUS_ALIGNMENT_RIGHT</option>
			<option value="right-float">SIGPLUS_ALIGNMENT_RIGHT_FLOAT</option>
		</param>
		<param name="lightbox" type="sectionedlist" default="boxplus/white" label="SIGPLUS_LIGHTBOX" description="SIGPLUS_LIGHTBOX_DESCRIPTION">
			<option value="none">SIGPLUS_LIGHTBOX_NONE</option>
			<option value="boxplus">SIGPLUS_BOXPLUS</option>
			<option value="boxplus/white">SIGPLUS_BOXPLUS_LIGHTSQUARE</option>
			<option value="boxplus/black">SIGPLUS_BOXPLUS_DARKSQUARE</option>
			<option value="boxplus/prettyphoto">SIGPLUS_BOXPLUS_PRETTYPHOTO</option>
			<option value="fancybox">SIGPLUS_FANCYBOX</option>
			<option value="prettyphoto">SIGPLUS_PRETTYPHOTO</option>
			<option value="prettyphoto/facebook">SIGPLUS_PRETTYPHOTO_DEFAULT</option>
			<option value="prettyphoto/light_rounded">SIGPLUS_PRETTYPHOTO_LIGHTROUNDED</option>
			<option value="prettyphoto/dark_rounded">SIGPLUS_PRETTYPHOTO_DARKROUNDED</option>
			<option value="prettyphoto/light_square">SIGPLUS_PRETTYPHOTO_LIGHTSQUARE</option>
			<option value="prettyphoto/dark_square">SIGPLUS_PRETTYPHOTO_DARKSQUARE</option>
			<option value="sexylightbox">SIGPLUS_SEXYLIGHTBOX</option>
			<option value="sexylightbox/black">SIGPLUS_SEXYLIGHTBOX_BLACK</option>
			<option value="sexylightbox/white">SIGPLUS_SEXYLIGHTBOX_WHITE</option>
			<option value="slimbox">SIGPLUS_SLIMBOX</option>
			<option value="slimbox2">SIGPLUS_SLIMBOX2</option>
		</param>
		<param name="slider" type="list" default="boxplus.slider" label="SIGPLUS_SLIDER" description="SIGPLUS_SLIDER_DESCRIPTION">
			<option value="none">SIGPLUS_SLIDER_NONE</option>
			<option value="boxplus.slider">SIGPLUS_SLIDER_BOXPLUS</option>
		</param>
		<param name="slider_orientation" type="radio" default="horizontal" label="SIGPLUS_SLIDER_ORIENTATION" description="SIGPLUS_SLIDER_ORIENTATION_DESCRIPTION">
			<option value="horizontal">SIGPLUS_SLIDER_ORIENTATION_HORIZONTAL</option>
			<option value="vertical">SIGPLUS_SLIDER_ORIENTATION_VERTICAL</option>
		</param>
		<param name="slider_navigation" type="radio" default="bottom" label="SIGPLUS_SLIDER_NAVIGATION" description="SIGPLUS_SLIDER_NAVIGATION_DESCRIPTION">
			<option value="top">SIGPLUS_SLIDER_NAVIGATION_TOP</option>
			<option value="bottom">SIGPLUS_SLIDER_NAVIGATION_BOTTOM</option>
			<option value="both">SIGPLUS_SLIDER_NAVIGATION_BOTH</option>
		</param>
		<param name="slider_buttons" type="radio" default="1" label="SIGPLUS_SLIDER_BUTTONS" description="SIGPLUS_SLIDER_BUTTONS_DESCRIPTION">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>
		<param name="slider_links" type="radio" default="1" label="SIGPLUS_SLIDER_LINKS" description="SIGPLUS_SLIDER_LINKS_DESCRIPTION">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>
		<param name="slider_counter" type="radio" default="1" label="SIGPLUS_SLIDER_COUNTER" description="SIGPLUS_SLIDER_COUNTER_DESCRIPTION">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>
		<param name="slider_overlay" type="radio" default="0" label="SIGPLUS_SLIDER_OVERLAY" description="SIGPLUS_SLIDER_OVERLAY_DESCRIPTION">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>
		<param name="slider_duration" type="text" default="800" label="SIGPLUS_SLIDER_DURATION" description="SIGPLUS_SLIDER_DURATION_DESCRIPTION" />
		<param name="slider_opacity" type="text" default="1.0" label="SIGPLUS_SLIDER_OPACITY" description="SIGPLUS_SLIDER_OPACITY_DESCRIPTION" />
		<param name="slider_animation" type="text" default="0" label="SIGPLUS_SLIDER_ANIMATION" description="SIGPLUS_SLIDER_ANIMATION_DESCRIPTION" />
		<param name="captions" type="list" label="SIGPLUS_CAPTIONS" description="SIGPLUS_CAPTIONS_DESCRIPTION">
			<option value="none">SIGPLUS_CAPTIONS_NONE</option>
			<option value="boxplus.caption">SIGPLUS_CAPTIONS_BOXPLUS</option>
			<option value="boxplus.hover">SIGPLUS_CAPTIONS_BOXPLUS_HOVER</option>
		</param>
		<param name="caption_title" type="textarea" cols="40" label="SIGPLUS_CAPTIONS_TITLE" description="SIGPLUS_CAPTIONS_TITLE_DESCRIPTION" />
		<param name="caption_description" type="textarea" cols="40" label="SIGPLUS_CAPTIONS_TEXT" description="SIGPLUS_CAPTIONS_TEXT_DESCRIPTION" />
		<param name="download" type="radio" default="0" label="SIGPLUS_CAPTIONS_DOWNLOAD" description="SIGPLUS_CAPTIONS_DOWNLOAD_DESCRIPTION">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>
		<param name="metadata" type="radio" default="0" label="SIGPLUS_CAPTIONS_METADATA" description="SIGPLUS_CAPTIONS_METADATA_DESCRIPTION">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</param>
		<param name="margin" type="text" default="" label="SIGPLUS_CSS_MARGIN" description="SIGPLUS_CSS_MARGIN_DESCRIPTION" />
		<param name="border_style" type="list" default="" label="SIGPLUS_CSS_BORDER_STYLE" description="SIGPLUS_CSS_BORDER_STYLE_DESCRIPTION">
			<option value="">SIGPLUS_CSS_BORDER_DEFAULT</option>
			<option value="none">SIGPLUS_CSS_BORDER_NONE</option>
			<option value="dotted">SIGPLUS_CSS_BORDER_DOTTED</option>
			<option value="dashed">SIGPLUS_CSS_BORDER_DASHED</option>
			<option value="solid">SIGPLUS_CSS_BORDER_SOLID</option>
			<option value="double">SIGPLUS_CSS_BORDER_DOUBLE</option>
			<option value="groove">SIGPLUS_CSS_BORDER_GROOVE</option>
			<option value="ridge">SIGPLUS_CSS_BORDER_RIDGE</option>
			<option value="inset">SIGPLUS_CSS_BORDER_INSET</option>
			<option value="outset">SIGPLUS_CSS_BORDER_OUTSET</option>
		</param>
		<param name="border_width" type="text" default="" label="SIGPLUS_CSS_BORDER_WIDTH" description="SIGPLUS_CSS_BORDER_WIDTH_DESCRIPTION" />
		<param name="border_color" type="color" default="" label="SIGPLUS_CSS_BORDER_COLOR" description="SIGPLUS_CSS_BORDER_COLOR_DESCRIPTION" />
		<param name="padding" type="text" default="" label="SIGPLUS_CSS_PADDING" description="SIGPLUS_CSS_PADDING_DESCRIPTION" />
	</params>
	<params group="advanced">
		<param name="thumb_cache" type="radio" default="1" label="SIGPLUS_THUMB_CACHE" description="SIGPLUS_THUMB_CACHE_DESCRIPTION">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="thumb_folder" type="text" default="thumbs" label="SIGPLUS_THUMB_FOLDER" description="SIGPLUS_THUMB_FOLDER_DESCRIPTION" />
		<param name="preview_folder" type="text" default="preview" label="SIGPLUS_PREVIEW_FOLDER" description="SIGPLUS_PREVIEW_FOLDER_DESCRIPTION" />
		<param name="fullsize_folder" type="text" default="fullsize" label="SIGPLUS_FULLSIZE_FOLDER" description="SIGPLUS_FULLSIZE_FOLDER_DESCRIPTION" />
		<param name="thumb_quality" type="text" default="85" label="SIGPLUS_THUMB_QUALITY" description="SIGPLUS_THUMB_QUALITY_DESCRIPTION" />
		<param name="labels" type="text" default="labels" label="SIGPLUS_LABELS" description="SIGPLUS_LABELS_DESCRIPTION" />
		<param name="labels_multilingual" type="radio" default="0" label="SIGPLUS_LABELS_MULTILINGUAL" description="SIGPLUS_LABELS_MULTILINGUAL_DESCRIPTION">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="sort_criterion" type="list" default="labels-filename" label="SIGPLUS_SORT_CRITERION" description="SIGPLUS_SORT_CRITERION_DESCRIPTION">
			<option value="labels-filename">SIGPLUS_SORT_CRITERION_LABELS_FILENAME</option>
			<option value="labels-mtime">SIGPLUS_SORT_CRITERION_LABELS_MTIME</option>
			<option value="filename">SIGPLUS_SORT_CRITERION_FILENAME</option>
			<option value="mtime">SIGPLUS_SORT_CRITERION_MTIME</option>
			<option value="random">SIGPLUS_SORT_CRITERION_RANDOM</option>
			<option value="randomlabels">SIGPLUS_SORT_CRITERION_RANDOMLABELS</option>
		</param>
		<param name="sort_order" type="list" default="0" label="SIGPLUS_SORT_ORDER" description="SIGPLUS_SORT_ORDER_DESCRIPTION">
			<option value="0">SIGPLUS_SORT_ORDER_ASCENDING</option>
			<option value="1">SIGPLUS_SORT_ORDER_DESCENDING</option>
		</param>
		<param name="linkage" type="list" default="inline" label="SIGPLUS_LINKAGE" description="SIGPLUS_LINKAGE_DESCRIPTION">
			<option value="inline">SIGPLUS_LINKAGE_INLINE</option>
			<option value="head">SIGPLUS_LINKAGE_HEAD</option>
			<option value="external">SIGPLUS_LINKAGE_EXTERNAL</option>
		</param>
		<param name="ajaxapi" type="radio" default="1" label="SIGPLUS_AJAXAPI" description="SIGPLUS_AJAXAPI_DESCRIPTION">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="library" type="imagelibrarylist" default="default" label="SIGPLUS_LIBRARY" description="SIGPLUS_LIBRARY_DESCRIPTION">
			<option value="none">SIGPLUS_LIBRARY_NONE</option>
			<option value="default">SIGPLUS_LIBRARY_DEFAULT</option>
			<option value="gd">SIGPLUS_LIBRARY_GD</option>
			<option value="imagick">SIGPLUS_LIBRARY_IMAGEMAGICK</option>
		</param>
		<param name="activationtag" type="text" default="gallery" label="SIGPLUS_ACTIVATIONTAG" description="SIGPLUS_ACTIVATIONTAG_DESCRIPTION" />
		<param name="debug" type="radio" default="0" label="SIGPLUS_DEBUG" description="SIGPLUS_DEBUG_DESCRIPTION">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="settings" type="settings" label="SIGPLUS_SETTINGS" description="SIGPLUS_SETTINGS_DESCRIPTION" />
	</params>
</install>